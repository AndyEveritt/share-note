{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "dom.iterable",
      "ES5",
      "ES6",
      "ES7"
    ],
    "types": [
      "svelte",
      "node"
    ]
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "**/*.ts"
  ],
}
